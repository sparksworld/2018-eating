.container,
.container .banner,
.textEnt {
	position: relative;
    width: 100%;
}

.container .banner {
	width: 750rpx;
	height: 450rpx;
}
.container .banner .outsider,.container .banner .outside,.container .banner .center,.container .banner .inner{
	border-radius: 50%;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translateX(-50%) translateY(-50%);
	filter: blur(2px);
	
	/* z-index: 1; */
	/* border: 1px solid; */
}
.container .banner .inner{
	width: 180rpx;
	height: 180rpx;
	background: rgba(121,123,174,.8);
	filter: blur(1px);	
}
.container .banner .center{
	width: 240rpx;
	height: 240rpx;
	background: rgba(121,123,174,.6);
}
.container .banner .outside{
	width: 340rpx;
	height: 340rpx;
	background: rgba(121,123,174,.4);
}
.container .banner .outsider{
