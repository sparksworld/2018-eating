.container .bottomPic{
	margin:0 auto;
	width:120rpx; 
	height:120rpx;
	position: fixed;
	bottom: 80rpx;
	right: 0;
	left: 0;
	padding: 0;
	border: none;
	background-color: transparent;
}
.container .bottomPic::after{
	display:none;
}
.container .bottomPic image{
	width: 100%;
	height: 100%;
}
.ani {
  animation: rote 5s linear infinite;
  transform: rotateZ(0deg);
}
@keyframes rote {
  from{
    transform: rotateZ(0deg);
  }
  to{
    transform: rotateZ(360deg);
  }
}